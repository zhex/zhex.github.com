article
  h1
    font-size 36px
  
  h2, h3, h4
    margin-top 30px
    
  p
    font-size 20px
    line-height 1.58
    color #555
    margin 30px 0 0
    
  a
    color #555
    text-decoration none
    background-image linear-gradient(to bottom, rgba(0, 0, 0, .8) 25%, rgba(0, 0, 0, 0) 25%)
