<% var last; %>

<section class="archives">
    <h2>归档 <span>Archives</span></h2>
    
    <% page.posts.each(function(post, i) { %>
        <% var year = post.date.year(); %>
        
        <% if (last != year) { %>
            <% if (last != null) { %></div><% } %>

            <% last = year; %>
            
            <div class="archive-year">
                <h3><a href="<%- url_for(config.archive_dir + '/' + year) %>" class="archive-year"><%= year %></a></h3>
                <ul>
        <% } %>
        <li><a href="<%- url_for(post.path) %>"><%= post.title %></a></li>
    <% }) %>
    </ul></div>


    <% if (page.total > 1){ %>
        <nav id="page-nav">
        <%- paginator({
            prev_text: "上一页",
            next_text: "下一页"
        }) %>
        </nav>
    <% } %>

</section>
