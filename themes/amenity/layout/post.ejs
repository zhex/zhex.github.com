<article>
    <header>
        <h1><%- page.title %></h1>
        <div class="info">
            <%- partial('partials/post/date', {post: page}) %>
            <%- partial('partials/post/category', {post: page}) %>
        </div>
    </header>

    <div class="article-entry"><%- page.content %></div>

    <footer>
        <a data-url="<%- page.permalink %>" data-id="<%= page._id %>" class="article-share-link"><%= __('share') %></a>
    </footer>
</article>

<%- partial('partials/post/comments', {post: page}) %>
